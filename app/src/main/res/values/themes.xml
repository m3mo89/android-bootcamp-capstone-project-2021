<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CryptoChallenge" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="Theme.CryptoChallenge.AccentTextAppearance.TitleTextAppearance">
        <item name="android:textSize">18sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Theme.CryptoChallenge.TertiaryTextAppearance">
        <item name="android:alpha">0.5</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?android:attr/textColorTertiary</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Theme.CryptoChallenge.PrimaryTextAppearance">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.CryptoChallenge.AccentTextAppearance">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">?android:attr/colorAccent</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:statusBarColor">@color/white</item>
    </style>
</resources>